@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1 style="margin:40px">@ViewData["Title"]</h1>
<h2 id="external-login-title" style="margin:40px">Associate your @Model.ProviderDisplayName account.</h2>
<hr />

<p id="external-login-description" class="text-info" style="margin:40px">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row" style="margin:40px">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <label asp-for="Input.User_Name" class="form-label"></label>
                <input asp-for="Input.User_Name" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.User_Name" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <label asp-for="Input.card_number" class="form-label"></label>
                <input asp-for="Input.card_number" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.card_number" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <label asp-for="Input.passport" class="form-label"></label>
                <input asp-for="Input.passport" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.passport" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <label asp-for="Input.age" class="form-label"></label>
                <input asp-for="Input.age" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.age" class="text-danger"></span>
            </div>
            
               <div class="form-floating">
              @*  <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
             *@   
             <label asp-for="Input.gender"></label>
             <select class="form-control"  asp-items="Html.GetEnumSelectList<Gender>()">  
                   @* <option value="">--Select--</option>  *@
                </select>  
                <span asp-validation-for="Input.gender" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
