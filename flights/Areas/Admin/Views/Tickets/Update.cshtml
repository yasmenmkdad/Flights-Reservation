@model flights.Entity.ticket
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";

}

<h1>Update</h1>

<h4>ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NoOfSeats" class="control-label"></label>
                <input asp-for="NoOfSeats" class="form-control" />
                <span asp-validation-for="NoOfSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckStatus" class="control-label"></label>
                <input asp-for="CheckStatus" class="form-control" />
                <span asp-validation-for="CheckStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="@ViewBag.UserID "></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightNumber" class="control-label"></label>
                <select asp-for="FlightNumber" class="form-control" asp-items="ViewBag.FlightNumber"></select>
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DeatailsTableTicket">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
