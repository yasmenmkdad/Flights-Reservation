@model IEnumerable<flights.Entity.flight>
@{
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";

}

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h2> Tables</h2>
                    </div>
                </div>
            </div>
            <!-- row -->
                 <div class="row column1">
                <div class="col-md-12">
                    <div class="white_shd full margin_bottom_30">
                        <div class="full graph_head">
                            <div class="heading1 margin_0">
                                <h2> Flights</h2>
                            </div>
                        </div>
                          <div class="full graph_head">
                                <a href="Create"><i class="fa-solid fa-circle-plus fa-3x green_color"></i> </a>
                            </div>
        <div class="container-fluid">

      <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>From</th>
                <th>TO</th>
                <th>Departure Time</th>
                <th>Arrivel Time</th>
                <th>Available Seat</th>
                <th>Price</th>
               
                <th>operation</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
            <tr>
                <td>@item.From</td>
                <td>@item.To</td>
                <td>@item.DepartureTime</td>
                <td>@item.ArrivalTime</td>
                <td>@item.AvailableSeat</td>
                <td>@item.Price</td>
                
                <td>
                    <a href="Details/?id=@item.FlightNumber"><i class="fa-solid fa-3x fa-display mr-3  yellow_color"></i></a>

                    <a href="update/?id=@item.FlightNumber"><i class="fa-solid fa-3x fa-pen-to-square mr-3"></i></a>

                    <a href="Delete/?id=@item.FlightNumber"><i class="fa-solid fa-3x fa-trash-can mr-3  red_color"></i></a>


                </td>


            </tr>
         
         
         }
           
          
        </tbody>
    
    </table>
       <a href="~/Admin/Home/tables">Back to List</a>
       </div>

    </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
