<div class="w3ls-section wthree-pricing" id="pricing">	
	<div class="container">
		<div class="wthree_head_section">
			<h3 class="w3l_header">Tour <span>Recommendation</span></h3>
			<p>A travel agency is a private retailer or public service that provides travel and tourism related services to the public on behalf of suppliers such as activities.</p>
		</div>
		<div class="pricing-grids-info">
			@{
				var Trips = new []{
					ViewBag.Country1
					,ViewBag.Country2,ViewBag.Country3,ViewBag.Country4}.ToList();
				var i = 1;
				foreach (var item in Model)
				{
					if (i <= 8)
					{
						DateTime drpTime = item.DepartureTime;
						DateTime ArrTime = item.ArrivalTime;
						TimeSpan FlightTime = ArrTime.Subtract(drpTime);
						FlightsystemdbContext context1 = new FlightsystemdbContext();
						var country = context1.countries.Where(w => w.Name == item.To).FirstOrDefault();
						<div class="pricing-grid grid-one" style="margin-left:20px;margin-top:20px">

							<div class="w3ls-top">
								<img src="data:image/bmp;base64, @(Convert.ToBase64String(country.Image))" 
							alt="" width = "200" height="200"/>
							</div>

							<div class="w3ls-bottom">
								<ul class="count">
									<h3>@item.To</h3>
									<li>@item.From</li>
									<li>@item.DepartureTime.ToString("dd/MM/yyyy")</li>
									<li>@FlightTime.TotalHours Hours</li>
								</ul>
								@*<h4> 900<span class="sup">$</span> </h4>*@
								<div class="more">
									<a href="~/Flights/Flight/Booking">Book Now</a>				
								</div>
							</div>

						</div>
						i++;
					}
				}
			}

			<div class="clearfix"> </div> 
				<!--End-slider-script-->
			</div>
		</div>	
	</div>	
